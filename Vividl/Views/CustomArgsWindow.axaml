<UserControl
  Height="350"
  Width="350"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d"
  x:Class="Vividl.Views.CustomArgsWindow"
  x:DataType="views:CustomArgsWindow"
  xmlns="https://github.com/avaloniaui"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:Vividl.Views"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <DockPanel>
    <DockPanel
      DockPanel.Dock="Bottom"
      LastChildFill="False"
      Margin="4">
      <Button
        Content="Cancel}"
        DockPanel.Dock="Right"
        IsCancel="True"
        MinWidth="80"
        TabIndex="2" />
      <Button
        Click="Submit_Click"
        Content="Submit"
        DockPanel.Dock="Right"
        IsDefault="True"
        MinWidth="80"
        TabIndex="1" />
    </DockPanel>
    <StackPanel DockPanel.Dock="Top">
      <TextBlock Margin="8" Text="{Binding CustomArgsWindow_Description}" />
      <TextBlock
        Foreground="{DynamicResource {x:Static Brushes.OrangeRed}}"
        Margin="8,0,8,8"
        Text="{Binding CustomArgsWindow_Warning}"
        TextWrapping="Wrap" />
    </StackPanel>
    <TextBox
      AcceptsReturn="True"
      TabIndex="0"
      x:Name="TxtArgs" />
    <!--
      VerticalScrollBarVisibility="Auto"
      adonisExtensions:CursorSpotlightExtension.RelativeSpotlightSize="0" />
    -->
  </DockPanel>
</UserControl>